<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Chat bubble style -->
    <Style x:Key="MessageInfoStyle"
           TargetType="StackPanel">
        <Setter Property="Margin"
                Value="5" />
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}" />
    </Style>

    <!-- Sender (blue) bubble style -->
    <Style x:Key="SenderInfoStyle"
           TargetType="StackPanel"
           BasedOn="{StaticResource MessageInfoStyle}">
        <Setter Property="HorizontalAlignment"
                Value="Right" />
    </Style>

    <!-- Chat bubble style -->
    <Style x:Key="MessageBubbleStyle"
           TargetType="ui:Card">
        <!--<Setter Property="CornerRadius"
                Value="10" />-->
        <Setter Property="Padding"
                Value="10 10 10 0" />
        <Setter Property="Margin"
                Value="5" />
        <Setter Property="MaxWidth"
                Value="1024" />
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}" />
    </Style>

    <!-- Sender (blue) bubble style -->
    <Style x:Key="SenderBubbleStyle"
           TargetType="ui:Card"
           BasedOn="{StaticResource MessageBubbleStyle}">
        <Setter Property="Background"
                Value="#0088fe" />
        <Setter Property="HorizontalAlignment"
                Value="Right" />
        <Setter Property="Padding"
                Value="10 10 10 0" />
    </Style>

    <!-- Recipient (gray) bubble style -->
    <Style x:Key="RecipientBubbleStyle"
           TargetType="ui:Card"
           BasedOn="{StaticResource MessageBubbleStyle}">
        <Setter Property="Background"
                Value="#e9e8ee" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
    </Style>

    <!-- Message text style -->
    <Style x:Key="MessageTextStyle"
           TargetType="TextBlock">
        <Setter Property="TextWrapping"
                Value="Wrap" />
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="Foreground"
                Value="#0a0a0a" />
        <Setter Property="MaxWidth"
                Value="1024" />
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background"
                        Value="#10000000" />
            </Trigger>
            <Trigger Property="IsFocused"
                     Value="True">
                <Setter Property="Background"
                        Value="#20000000" />
                <Setter Property="Foreground"
                        Value="{Binding IsSender, Converter={StaticResource BoolToBrushConverter}, ConverterParameter='White;Black'}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Sender text style -->
    <Style x:Key="SenderTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource MessageTextStyle}">
        <Setter Property="Foreground"
                Value="#e9e8ee" />
    </Style>
    
</ResourceDictionary>